{
  "manifest_version": 3,
  "name": "InfoGuard - Truth Verification",
  "version": "1.0.0",
  "description": "Real-time deepfake and misinformation detection using AI-powered analysis. Verify multimedia authenticity and get credibility scores for social media content.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "webRequest",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "InfoGuard - Verify Content"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "src/options.html",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/injected.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
